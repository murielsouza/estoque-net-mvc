@model IEnumerable<Loja.Models.Produto>

@{
    ViewData["Title"] = "Index";
}

<h2>Estoque</h2>

<div class="row">
  <div class="col-10">
      <form asp-controller="Produto" asp-action="Index">
    <p>
        <input type="text" name="SearchString" id="buscaAutoComplete" />
        <input type="submit" value="Buscar" />
    </p>
</form>
  </div>
  <div class="col-2">
    <form asp-action="Create">
    <div>
        <button type="submit">Novo Item</button>
    </div>
    </form>
  </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="badge badge-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="badge badge-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section scripts{
   <script>
    $("#buscaAutoComplete").autocomplete({
        source: '@Url.Action("Index","Produto")',
        minlength: 2
    })
   </script> 
}

